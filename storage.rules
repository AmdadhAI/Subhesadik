rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    match /categories/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    match /site/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
